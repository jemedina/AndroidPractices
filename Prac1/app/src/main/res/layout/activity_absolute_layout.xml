<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AbsoluteLayoutActivity">
    <?xml version="1.0" encoding="utf-8"?>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="240dp">

        <TableRow>
            <Button android:layout_width="wrap_content"
                android:layout_weight="1"

                android:text="1" android:height="80dp"/>
            <Button android:layout_width="wrap_content"
                android:layout_weight="1"

                android:text="2" android:height="80dp"/>
            <Button android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="3" android:height="80dp"/>
        </TableRow>
        <TableRow>
            <Button android:layout_width="wrap_content"
                android:layout_weight="1"

                android:text="4" android:height="80dp"/>
            <Button android:layout_width="wrap_content"
                android:layout_weight="1"

                android:text="5" android:height="80dp"/>
            <Button android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="6" android:height="80dp"/>
        </TableRow>
        <TableRow>
            <Button android:layout_width="wrap_content"
                android:layout_weight="1"

                android:text="7" android:height="80dp"/>
            <Button android:layout_width="wrap_content"
                android:layout_weight="1"

                android:text="8" android:height="80dp"/>
            <Button android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="9" android:height="80dp"/>
        </TableRow>

    </TableLayout>
    <Button
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:text="+"
        android:layout_x="300dp"/>
    <Button
        android:layout_width="80dp"
        android:layout_y="100dp"
        android:layout_height="100dp"
        android:text="="
        android:layout_x="300dp"/>
    <Button
        android:layout_width="80dp"
        android:layout_y="200dp"
        android:layout_height="120dp"
        android:text="C"
        android:layout_x="300dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_y="240dp"
        android:layout_height="80dp"
        android:text="0"/>
</AbsoluteLayout>